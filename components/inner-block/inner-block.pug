mixin inner-block(content,params)
  .inner-block&attributes(attributes)
    .inner-block__image-container
      img(src=info.image.src alt=info.image.alt).inner-block__image
    .inner-block__info
      h1.inner-block__title!=info.title
      +inner-block__text(info.list)
        

mixin inner-block__text(content, params)
  .inner-block__text&attributes(attributes)
    each item in content
      .inner-block__column
        each paragraph in item
          p.inner-block__text-item&attributes(attributes)!=paragraph.text
            if (paragraph.link) 
              a(href=paragraph.link.href).inner-block__link!=paragraph.link.content
