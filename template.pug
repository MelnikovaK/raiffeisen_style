include components/components

block setup     
html
  head
    link(rel="stylesheet", href="styles/styles.css")
    meta(charset="utf-8")
    meta(name="author", content="Melnikova")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    block title
      title=title

  body
    block page
    +page
      +content-container
        +custom-header()
        +inner-block-template()
      +menu__template(0)

      block content

      script(src="scripts/libs/jquery-3.3.1.js" type="text/javascript")
      script(src="scripts/libs/handlebars-v4.0.12.js" type="text/javascript")
      script(src="components/inner-block/inner-block.js" type="text/javascript")
      script(src="components/menu/menu.js" type="text/javascript")
      script(src="components/language/language.js" type="text/javascript")
      script(src="components/footer/footer.js" type="text/javascript")
      script(src="components/main.js" type="text/javascript")